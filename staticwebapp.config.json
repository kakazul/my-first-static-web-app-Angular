{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json" ,
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2c": {
          "registration": {
            "clientIdSettingName": "B2C_ClientID",
            "clientCredential": {
              "clientSecretSettingName": "B2C_Client_Secret"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://b2adaldesktopapps.b2clogin.com/b2adaldesktopapps.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=B2C_1_susi"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "scopes": ["openid", "profile"]
          }
        }
      }
    }
  },
  "routes": [
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "platformErrorOverrides": [
    {
      "errorType": "Unauthorized_InsufficientUserInformation",
      "serve": "/200.html",
      "statusCode": 200
    },
    {
      "errorType": "Unauthorized_InvalidInvitationLink",
      "serve": "/200.html",
      "statusCode": 200
    },
    {
      "errorType": "Unauthorized_MissingRoles",
      "serve": "/200.html",
      "statusCode": 200
    },
    {
      "errorType": "Unauthorized_TooManyUsers",
      "serve": "/200.html",
      "statusCode": 200
    },
    {
      "errorType": "Unauthorized_Unknown",
      "serve": "/200.html",
      "statusCode": 200
    }
  ]
}
